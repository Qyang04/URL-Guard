<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/input"
                android:endColor="@color/input"
                android:angle="45"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <!-- Shadow -->
    <item android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/input"/> <!-- Shadow color -->
            <corners android:radius="15dp"/>
        </shape>
    </item>
</layer-list>